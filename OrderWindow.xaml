<Window x:Class="_41razmer.OrderWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_41razmer"
        mc:Ignorable="d"
        Title="OrderWindow" Height="650" Width="1200" FontFamily="Comic Sans MS">
    <Grid>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="140"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="80"></RowDefinition>
            </Grid.RowDefinitions>


            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="300"></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                </Grid.RowDefinitions>

                <TextBlock Grid.Column="0" Grid.Row="0" Text="Дата формирования заказа" FontSize="20" Margin="5"/>
                <DatePicker Grid.Column="1" Grid.Row="0" FontSize="20" Width="auto" Name="OrderFormDP" IsEnabled="False"/>
                
                <TextBlock Grid.Column="0" Grid.Row="1" Text="Дата доставки заказа" FontSize="20" Margin="5"/>
                <DatePicker Grid.Column="1" Grid.Row="1" FontSize="20" Width="auto" Name="OrderDeliveryDP" />

                <TextBlock Grid.Column="0" Grid.Row="2" Text="ФИО клиента" FontSize="20" Margin="5"/>
                <TextBlock Name="ClientTB" Grid.Column="1" Grid.Row="2" FontSize="20"/>

                <TextBlock Grid.Column="0" Grid.Row="3" Text="Номер заказа" FontSize="20" Margin="5"/>
                <TextBlock Name="TBOrderID" Grid.Column="1" Grid.Row="3" FontSize="20"/>


            </Grid>

            <ListView Name="ProductListView" Grid.Row="1" HorizontalContentAlignment="Stretch">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="300"></ColumnDefinition>
                                <ColumnDefinition Width="*"></ColumnDefinition>
                                <ColumnDefinition Width="150"></ColumnDefinition>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="30"></RowDefinition>
                                <RowDefinition Height="*"></RowDefinition>
                                <RowDefinition Height="*"></RowDefinition>
                                <RowDefinition Height="*"></RowDefinition>
                                <RowDefinition Height="*"></RowDefinition>
                                <RowDefinition Height="*"></RowDefinition>
                            </Grid.RowDefinitions>

                            <Image Width="300" Grid.Column="0" Stretch="UniformToFill" HorizontalAlignment="Center" Grid.RowSpan="4">
                                <Image.Source>
                                    <Binding Path="ProductPhotoPath">
                                        <Binding.TargetNullValue>
                                            <ImageSource>
                                                res/picture.png
                                            </ImageSource>
                                        </Binding.TargetNullValue>
                                    </Binding>
                                </Image.Source>
                            </Image>

                            <TextBlock Text="{Binding ProductName}" Grid.Column="1" Grid.Row="0" HorizontalAlignment="Left" FontSize="20" TextWrapping="Wrap"></TextBlock>
                            <TextBlock Text="{Binding ProductDescription}" Grid.Column="1" Grid.Row="1" HorizontalAlignment="Left" FontSize="20" ></TextBlock>
                            <TextBlock Text="{Binding ProductCost, StringFormat={}{0:0} рублей}" Grid.Column="1" Grid.Row="2" HorizontalAlignment="Left" FontSize="20" ></TextBlock>
                            <TextBlock Text="{Binding ProductDiscountAmount, StringFormat=скидка {0} % }" Grid.Column="2" Grid.Row="1" HorizontalAlignment="Right" FontSize="40" TextWrapping="Wrap"></TextBlock>
                            <WrapPanel Grid.Row="5" Grid.Column="1">
                                <Button Content="-" Width="20" Name="BtnMinus" Click="BtnMinus_Click"></Button>
                                <TextBlock Name="CountTB" Text="{Binding ProductCount}" FontSize="23"></TextBlock>
                                <Button Content="+" Width="20" Name="BtnPlus" Click="BtnPlus_Click"></Button>
                                <Button Content="Удалить" Width="100" Name="RemoveProductBtn" Click="RemoveProductBtn_Click"></Button>
                            </WrapPanel>
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>

            </ListView>

            <WrapPanel Grid.Row="2" HorizontalAlignment="Center">
                <TextBlock Text="Пункт выдачи" FontSize="20" Margin="0,0,5,0"></TextBlock>
                <ComboBox Name="PickupCombo" FontSize="20" Width="500" DisplayMemberPath="PickUpPointFullAddress"></ComboBox>
            </WrapPanel>
            <Button Grid.Row="2" VerticalAlignment="Bottom" HorizontalAlignment="Center" Content="Сохранить" Name="SaveButton" Click="SaveButton_Click"></Button>
            <TextBlock Grid.Row="2" Name="TBOrderSum" Text="Сумма заказа: " VerticalAlignment="Bottom" HorizontalAlignment="Left" FontSize="20"></TextBlock>
            </Grid>


    </Grid>
</Window>
