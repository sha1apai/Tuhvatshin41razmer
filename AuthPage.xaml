<Page x:Class="_41razmer.AuthPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:_41razmer"
      mc:Ignorable="d" 
      Height="750" Width="1400"
      Title="AuthPage" FontFamily="Comic Sans MS">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <TextBlock Grid.Row="0" VerticalAlignment="Bottom"  Text="Логин" FontSize="20" HorizontalAlignment="Right" Margin="0,0,154,62" RenderTransformOrigin="-0.442,0.647"/>
        <TextBlock Grid.Row="1" VerticalAlignment="Top"  Text="Пароль" FontSize="20" HorizontalAlignment="Right" Margin="0,66,154,0"/>
        <TextBox Grid.Row="0" Grid.Column="1" Width="200" Height="30" FontSize="20" Margin="150,158,350,62" Name="TBoxLogin"></TextBox>
        <TextBox Grid.Row="1" Grid.Column="1" Width="200" Height="30" FontSize="20" Margin="150,64,350,156" Name="TBoxPassword"></TextBox>
        <Button Grid.Row="2" Grid.Column="1" Width="150" Height="30" HorizontalAlignment="Left" Content="Войти" Name="LoginBtn" Click="LoginBtn_Click" Margin="175,10,0,210"></Button>
        <Button Grid.Row="2" Grid.Column="0" Width="200" Height="30" HorizontalAlignment="Left" Content="Войти как гость" Name="GuestLoginBtn" Click="GuestLoginBtn_Click" Margin="346,10,0,210"></Button>
        <StackPanel Orientation="Horizontal" Grid.Row="2" Grid.Column="1">
            <TextBlock Name="CaptchaOneWord" FontSize="22" Margin="30,0,0,0"></TextBlock>
            <TextBlock Name="CaptchaTwoWord" FontSize="22" TextDecorations="Strikethrough" Margin="0,5,0,0"></TextBlock>
            <TextBlock Name="CaptchaThreeWord" FontSize="22" TextDecorations="Strikethrough"></TextBlock>
            <TextBlock Name="CaptchaFourWord" FontSize="22" TextDecorations="Strikethrough" Margin="0,10,0,0"></TextBlock>
        </StackPanel>
        <TextBox Name="TBoxCaptcha" Width="120" Height="30" FontSize="20" Margin="0,62,580,158" MaxLength="4" Grid.Row="2" Grid.Column="1"/>
    </Grid>
</Page>
